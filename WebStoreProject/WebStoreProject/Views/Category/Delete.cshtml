@model WebStoreProject.Models.Category

@{
    ViewBag.Title = "Delete";
}

<h2>Deleting</h2>
<h3>Are you sure you want to delete category '@Model.Name'?</h3>
<h3>The category will be deleted irrevocably!</h3>

@if (ViewBag.Error)
{
    <h3 class="text-danger">@ViewBag.ErrorMsg</h3>
}
<div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <input type="button" value="Cancel" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Category")'" />
        </div>
    }
</div>
