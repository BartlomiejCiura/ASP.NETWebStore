@model IEnumerable<WebStoreProject.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <button type="button" class="btn btn-success btn-lg" onclick="location.href='@Url.Action("Create", "Category")'">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Create new
    </button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Upper_category)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category2.Name)
        </td>
        <td>
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Category", new { id = item.Id })'">
                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                Edit
            </button>
            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Category", new { id = item.Id })'">
                <i class="fa fa-trash" aria-hidden="true"></i>
                Delete
            </button>
            
        </td>
    </tr>
}

</table>
