@model IEnumerable<WebStoreProject.Models.ApplicationUser>

<h2>Customers.</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @if (item.Discount == null)
            {
                <p>NO DISCOUNT</p>
            }
            else
            {
                @Html.DisplayFor(modelItem => item.Discount)<label>%</label>
            }
        </td>
        <td>
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Customer", new { id = item.Id })'">
                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                Edit
            </button>
            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Customer", new { id = item.Id })'">
                <i class="fa fa-trash" aria-hidden="true"></i>
                Delete
            </button>
        </td>
    </tr>
}

</table>
