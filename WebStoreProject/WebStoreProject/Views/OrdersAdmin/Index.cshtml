@model IEnumerable<WebStoreProject.Models.Order_details>

<h2>Orders.</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order.User.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.Payment.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Order.User.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order.Payment.Name)
        </td>
        <td>
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "OrdersAdmin", new { id = item.Id })'">
                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                Edit
            </button>
            <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Details", "OrdersAdmin", new { id = item.Id })'">
                <i class="fa fa-search" aria-hidden="true"></i>
                Details
            </button>
        </td>
    </tr>
}

</table>
